@model UserToRegisterDto;
@{
    ViewData["Title"] = "Home Page";
}

<div class="app-center">
    <div>
        <h1 class="h1-center">Welcome</h1>
        <form class="form-custom" method="post" asp-controller="User" asp-action="Register">
            <input class="input-custom" placeholder="First name" asp-for=FirstName type="text">
            <input class="input-custom" placeholder="Last name" asp-for=LastName type="text">
            <input class="input-custom" placeholder="E-mail" asp-for=Email type="text">
            <input class="input-custom" placeholder="Password" asp-for="Password" type="password">
            <button class="submit-button">Register</button>
        </form>
    </div>

</div>